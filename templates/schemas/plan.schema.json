{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": ["title", "overview", "tasks", "merge_notes"],
  "properties": {
    "title": {"type": "string"},
    "overview": {"type": "string"},
    "tasks": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "title", "prompt", "depends_on", "tags"],
        "properties": {
          "id": {"type": "string", "pattern": "^T\\d{2}$"},
          "title": {"type": "string"},
          "prompt": {"type": "string"},
          "depends_on": {
            "type": "array",
            "items": {"type": "string", "pattern": "^T\\d{2}$"},
            "default": []
          },
          "tags": {
            "type": "array",
            "items": {"type": "string"},
            "default": []
          }
        }
      }
    },
    "merge_notes": {"type": "string", "default": ""}
  }
}
